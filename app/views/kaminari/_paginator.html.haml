= paginator.render do
  %nav.mt-1{"aria-label" => "Page navigation"}
    %ul.pagination.justify-content-center
      = first_page_tag
      = prev_page_tag
      - each_page do |page|
        - if page.left_outer? || page.right_outer? || page.inside_window?
          = page_tag page
        - elsif !page.was_truncated?
          = gap_tag
      = next_page_tag
      = last_page_tag